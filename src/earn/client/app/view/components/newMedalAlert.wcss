.new-page{
    background: #f2f2f2;
    background: rgba(34,34,34,0.9);
}
.content{
    width: 100%;
    height:100%;
    padding: 0px 0px 70px;
    justify-content: space-between;
}
.medal{
    margin-top: 200px;
    position: relative;
    
}
.medal-bgimg{

}
.avatar{
    width: 100px;
    height: 100px;
    border-radius: 50%;
}
.medal-img{
    position: absolute;
    left: 0px;
    top: 50%;
    transform: translateY(-50%);
}
.medal-title{
    font-size:48px;
    color:#F7CE89;
}
.closeImg{
    position: absolute;
    top: 60px;
    right: 60px;
    width: 100px;
    height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.other{
    margin-top: 30px;
    width: 550px;
    height: 150px;
    padding: 25px;
    background: #FCDC3C;
    border-radius: 12px;
    display: flex;
    justify-content: space-around;
    align-items: center;
}
.other-say{
    width: 80%;
    height: 100%;
    padding-right: 25px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.medal-desc{
    font-size:32px;
    color:#BFAA9A;
    margin-top: 15px;
}
.medal-btn{
    border-radius:12px;
    font-size:32px;
    font-weight:500;
    color:#222222;
    margin-left:15px;
}
.content-bottom{
    display: flex;
    justify-content: center;
    align-items: center;
    background: url(../../res/image/medalShare_btn.png);
    height: 100px;
    width: 280px;
    animation: big-small 1s linear infinite;
}


.flex-col{
    display: flex;
    flex-direction: column;
    align-items: center;
}
